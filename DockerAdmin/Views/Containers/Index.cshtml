@model DockerAdmin.ViewModels.AvailableContainersViewModel
@{
    ViewData["Title"] = "Dash";
}

<!-- RUNNING CONTAINERS TABLE -->
<h3 class="display-6">Running containers</h3>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>CONTAINER ID</th>
                <th>NAMES</th>
                <th>IMAGE</th>
                <th>CREATED</th>
                <th>STATUS</th>
                <th>PORTS</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var container in Model.ActiveContainers)
            {
                <tr>
                    <td>@container.Id</td>
                    <td>@container.Names</td>
                    <td>@container.Image</td>
                    <td>@container.Created</td>
                    <td>@container.Status</td>
                    <td>@container.Ports</td>
                    <td>
                        <a class="btn btn-warning btn-sm" 
                            asp-action="RestartContainer"
                            asp-route-id="@container.Id"
                            title="Restart container">
                            <i class="bi bi-arrow-repeat"></i>
                        </a>
                        <a class="btn btn-danger btn-sm" 
                            asp-action="StopContainer"
                            asp-route-id="@container.Id"
                            title="Stop container">
                            <i class="bi bi-stop-circle"></i>
                        </a>
                        <a class="btn btn-secondary btn-sm" 
                            asp-action="LogsContainer"
                            asp-route-id="@container.Id"
                            title="Container logs">
                            <i class="bi bi-body-text"></i>
                        </a>
                        <a class="btn btn-info btn-sm" 
                            asp-action="DetailsContainer"
                            asp-route-id="@container.Id"
                            title="Container details">
                            <i class="bi bi-info-lg"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


